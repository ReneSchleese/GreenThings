# Unity YAML (text) assets
*.meta      text eol=lf
*.unity     text eol=lf
*.prefab    text eol=lf
*.asmdef    text eol=lf
*.json      text eol=lf
*.shader    text eol=lf
*.cginc     text eol=lf
*.compute   text eol=lf
*.hlsl      text eol=lf
*.txt       text eol=lf
*.md        text eol=lf
*.cs        text eol=lf
*.xml       text eol=lf

# Binary assets â€” NEVER normalize or diff
*.png       binary
*.jpg       binary
*.jpeg      binary
*.tga       binary
*.tif       binary
*.tiff      binary
*.psd       binary
*.exr       binary
*.mp3       binary
*.wav       binary
*.ogg       binary
*.mp4       binary
*.avi       binary
*.mov       binary
*.dll       binary
*.ttf       binary
*.otf       binary
*.fbx       binary
*.blend     binary
*.blend1    binary
*.mat       binary
*.controller binary
*.anim      binary
*.unitypackage binary
*.so        binary
*.a         binary
*.pdb       binary

# Ensure no text conversion or eol normalization ever applies to binaries
*.ttf       binary -text -eol
*.otf       binary -text -eol
*.psd       binary -text -eol
*.exr       binary -text -eol

